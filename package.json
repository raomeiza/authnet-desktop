{
  "name": "Authnet",
  "version": "0.1.0",
  "private": true,
  "main": "electron/dist/main.js",
  "author": {
    "name": "R A Omeiza",
    "email": "blesseth.omeiza@gmail.com"
  },
  "description": "Authnet desktop application",
  "homepage": "https://www.authnet.tech/apps/desktop",
  "scripts": {
    "build": "tsc -p electron",
    "build:app": "electron-builder",
    "electron": "electron ./electron/dist/main.js",
    "lint": "eslint \"electron/**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"electron/**/*.{js,ts}\"",
    "prettier": "prettier --write \"electron/**/*.{js,ts}\""
  },
  "devDependencies": {
    "@types/node": "^20.16.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.57.0",
    "fd-slicer": "^1.1.0",
    "prettier": "^3.3.0",
    "ssh2": "^1.16.0",
    "typescript": "^5.5.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    }
  },
  "build": {
    "appId": "com.raomeiza.biometric-attendance-system",
    "productName": "Biometric Attendance System",
    "directories": {
      "output": "dist/electron"
    },
    "asar": {
      "smartUnpack": true
    },
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildVersion": "0.1.0",
    "files": [
      "electron/dist/**/*",
      "!node_modules/electron/**/*",
      "!node_modules/app-builder-bin/**/*",
      "!node_modules/typescript/**/*",
      "!node_modules/7zip-bin/**/*",
      "!node_modules/prettier/**/*",
      "!node_modules/@types/**/*",
      "!node_modules/eslint/**/*",
      "!node_modules/electron-builder/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "drivers",
        "to": "drivers",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "school.db",
        "to": "school.db"
      }
    ],
    "compression": "maximum",
    "win": {
      "icon": "assets/icons/app-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "differentialPackage": true
    }
  },
  "dependencies": {
    "@types/ssh2": "^1.15.5"
  }
}
